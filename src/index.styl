.item
  display: grid
  padding: .5em
  grid-template-columns: 3em 1fr 3em 3em
  & > div
    padding: .25em
  border-bottom: 1px solid #e5e6e7
  &:last-child
    border-bottom: 0
  &.error
    outline: 1px solid red
  .cell
    display: flex
    align-items: center
    justify-content: center
  .check
    cursor: pointer
    color: #d1d2d3
    border-radius: .25em
    border: 1px solid transparent
  .check:hover
    background: rgba(255,255,0,.25)
  .check.active[data-name=yes]
    color: rgb(0,192,0)
    border-color: rgb(0,192,0)
  .check.active[data-name=no]
    color: rgb(255,0,0)
    border-color: rgb(255,0,0)
